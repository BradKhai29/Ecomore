@page "{categoryId:guid?}"
@model Presentation.Areas.Admin.Pages.Category.DetailModel
@{
}

@if(Model.IsCategoryExisted)
{
    <section class="container mt-5">
        <div class="p-5 mb-4 bg-danger bg-opacity-50 rounded-3">
            <div class="container">
                <h4 class="display-6 fw-bold mb-4">Category Name: @(Model.Category.Name).</h4>
                <p class="col-md-8 fs-4">
                    Total Products:  <span class="fw-bold text-dark">@(Model.Category.BelongingProducts.Count())</span>
                </p>
                <a href="/Admin/Category" class="btn btn-warning btn-lg fw-bold" type="button">Back to category page.</a>
            </div>
        </div>
    </section>

    <section class="container">
        <h3 class="text-center mb-5">
            <span class="py-1 border-bottom border-3 border-dark">Products belong to this category</span>
        </h3>
        <section class="row">
            @foreach (var product in Model.Category.BelongingProducts)
            {
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="card product-item" name="product-id" id="@product.Id" onclick="AddItemToCart(event);">
                        <a href="/Admin/Product/Detail/@product.Id">
                            @{
                                var imageUrl = product.ImageUrls.FirstOrDefault();
                            }
                            <img name="product-image" src="@imageUrl" class="card-img-top" alt="Product Image">
                        </a>
                        <section class="card-body">
                            <h5 class="card-title">
                                <a href="/Admin/Product/Detail/@product.Id" class="fw-bold text-decoration-none text-dark">
                                    @product.Name
                                </a>
                            </h5>
                            <div class="d-flex fw-bold">
                                <p class="flex-grow-1 me-2" name="unit-price">@product.UnitPrice</p>
                                @* <p class="ms-auto text-success">@(product.IsAvailable ? "In stock" : "Out of stock")</p> *@
                            </div>
                            <div class="d-flex">
                                <a href="/Admin/Product/Detail/@(product.Id)" class="fw-bold btn btn-outline-primary flex-grow-1 me-2">
                                    View detail
                                </a>
                                <button class="fw-bold ms-auto btn btn-dark">
                                    <i class="fa-solid fa-ellipsis-vertical"></i>
                                </button>
                            </div>
                        </section>
                    </div>
                </div>
            }
        </section>
    </section>
}
else
{
    <section class="container mt-5">
        <div class="p-5 mb-4 bg-danger bg-opacity-50 rounded-3">
            <div class="container">
                <h1 class="display-5 fw-bold mb-4">Category is not found.</h1>
                <p class="col-md-8 fs-4">Please check again the input categoryId.</p>
                <a href="/Admin/Category" class="btn btn-warning btn-lg fw-bold" type="button">Back to category page.</a>
            </div>
        </div>
    </section>
}
