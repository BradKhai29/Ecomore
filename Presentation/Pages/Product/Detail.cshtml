@page "{productId}"
@using DataAccess.DataSeedings
@using Presentation.Pages.Shared.Components.TopProducts
@model Presentation.Pages.Product.DetailModel
@{
    var product = Model.Product;
    product.IsAvailable = product.ProductStatus.Id == ProductStatuses.InStock.Id;
    int imageOrder = 0;
}
<section class="container">
    <section class="row mx-0 rounded bg-light my-3">
        <div aria-label="breadcrumb">
            <ol class="breadcrumb m-0 p-2">
                <li class="breadcrumb-item">
                    <a class="text-muted nav-link p-0" href="#">@product.Category.Name</a>
                </li>
                <li class="breadcrumb-item active">@product.Name</li>
            </ol>
        </div>
    </section>

    <section id="@product.Id" class="row mx-0" onclick="AddItemToCart(event);">
        <div class="col-sm-12 col-md-5 p-0 d-flex border border-end ">
            <div class="flex-grow-1 d-flex">
                @foreach (var imageUrl in product.ImageUrls)
                {
                    <img class="w-100" src="@imageUrl"
                         name="@(imageOrder == 0 ? "product-image" : "normal-iamge")"
                         style="display: @(imageOrder == 0 ? "inline" : "none")" />
                    {
                        imageOrder = imageOrder + 1;
                    }
                }
            </div>
        </div>
        <div class="col-sm-12 col-md-7 p-4 d-flex flex-column border border-end border-bottom">
            <section class="d-flex flex-column flex-grow-1">
                <p class="d-flex flex-column">
                    <span class="h3 product-name">@product.Name</span>
                    <div class="text-muted h5 display-flex flex-row" >
                        <span>ĐƠN GIÁ:</span>
                        <span name="unit-price">@product.UnitPrice</span>
                    </div>
                </p>
                <section id="product-description" class="d-flex flex-column flex-grow-1">
                    <p class="flex-grow-1">@product.Description</p>
                    <div class="@(product.IsAvailable ? "d-flex" : "d-none")" 
                        onclick="EditQuantity(event);">
                        <div class="d-flex me-2 align-items-center">
                            <span class="h5 m-0 pe-1">SỐ</span>
                            <span class="h5 m-0">LƯỢNG</span>
                        </div>
                        <div class="input-group">
                            <button id="minus-button" class="btn btn-dark border-2 rounded-0">
                                <i id="minus-button" class="fa-solid fa-minus"></i>
                            </button>
                            <input type="number" class="m-0 product-quantity text-center border fw-bold" 
                                min="1" value="1" style="width: 6.4rem;">
                            <button id="plus-button" class="btn btn-dark border-2 rounded-0">
                                <i id="plus-button" class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </section>
                <div class="d-flex pt-4 pb-2">
                    @if (product.IsAvailable)
                    {
                        <button name="add-to-cart" class="btn btn-dark flex-grow-1 rounded-0 fw-bold">
                            THÊM VÀO GIỎ HÀNG
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-danger flex-grow-1 rounded-0 fw-bold">
                            SẢN PHẨM TẠM THỜI HẾT HÀNG
                        </button>
                    }
                </div>
            </section>
        </div>
    </section>

    <section class="container p-2 px-3 my-5 rounded bg-light shadow-sm">
        <h4 class="text-muted d-flex mb-3">
            <span class="align-self-center">Các sản phẩm liên quan</span>
        </h4>

        @await Component.InvokeAsync(nameof(TopProducts))
    </section>
</section>
