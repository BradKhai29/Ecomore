@page
@model Presentation.Pages.Auth.RegisterModel
@{
}

<section class="container-fluid py-5" style="background: url(/images/home_bg.jpg) no-repeat; background-size: cover;">
    @if(!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="col-md-10 mx-auto mb-3 col-lg-5">
            <div class="alert alert-danger fw-bold border-2 border-danger alert-dismissible fade show" role="alert">
                <strong>Warning:</strong> @Model.ErrorMessage !
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-light needs-validation" method="post" novalidate>
            <h3 class="text-center mb-3">Sign Up</h3>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="@Model.RegisterDto.FirstName" required>
                <label asp-for="@Model.RegisterDto.FirstName">First Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="@Model.RegisterDto.LastName" required>
                <label asp-for="@Model.RegisterDto.LastName">Last Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="@Model.RegisterDto.Username" required>
                <label asp-for="@Model.RegisterDto.Username">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" asp-for="@Model.RegisterDto.Email" required>
                <label asp-for="@Model.RegisterDto.Email">Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" asp-for="@Model.RegisterDto.Password" required>
                <label asp-for="@Model.RegisterDto.Password">Password</label>
            </div>
            <button class="w-100 btn btn-lg btn-dark fw-bold" type="submit">Sign Up</button>
            <p class="mt-3 text-center">
                Already have an account? <a href="/Auth/Login" class="text-decoration-none fw-bold text-primary">Sign In</a>
            </p>
            <hr class="my-4">
        </form>
    </div>
</section>
<script src="~/js/form_validation.js"></script>
