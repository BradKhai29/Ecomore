@page
@model Presentation.Pages.Auth.ForgotPasswordModel
@{
}

<section class="container-fluid py-5" style="background: url(/images/home_bg.jpg) no-repeat; background-size: cover;">
    <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-light">
            <h3 class="text-center mb-3">Forgot Password</h3>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="Enter username or email to get reset link">
                <label for="floatingInput">Email or Username</label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
            <p class="mt-3 text-center">
                Do not have an account? <a href="#" class="text-decoration-none fw-bold text-primary">Sign up</a>
            </p>
            <hr class="my-4">
        </form>
    </div>
</section>