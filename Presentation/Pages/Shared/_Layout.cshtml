@using Presentation.Pages.Shared.Components.ShoppingCart
@{
    bool isLogin = !Equals(User.Identity, null)
        && User.Identity.IsAuthenticated;

    bool displayFooter = true;

    if (!Equals(ViewData["DisplayFooter"], null))
    {
        bool.TryParse(ViewData["DisplayFooter"].ToString(), out displayFooter);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body id="body" class="m-0 d-flex flex-column" style="height: 100vh">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Presentation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Product">Hello</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Blog</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav justify-content-center">
                        <li class="nav-item me-md-3">
                            <a class="nav-link text-dark" href="#"
                                onclick="ShowShoppingCart();">
                                <i class="fa-solid fa-xl fa-cart-shopping"></i>
                            </a>
                        </li>
                        <li class="nav-item ms-md-3">
                            <a class="nav-link text-dark" href="#">
                                <i class="fa-solid fa-xl fa-circle-user"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @await Component.InvokeAsync(nameof(ShoppingCart))

    <main role="main" class="container position-relative flex-grow-1">
        @RenderBody()
    </main>

    @if(displayFooter)
    {
        <footer class="container-fluid bg-dark mt-auto">
            <section class="row py-4 px-3">
                <div class="col-3">
                    <div>
                        <p class="text-muted fw-bold">Shop</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">Tất cả sản phẩm</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Hạt tươi</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Hạt khô</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Hạt mix</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Sản phẩm khác</a>
                    </div>
                    <div class="mt-4">
                        <a class="fw-bold text-success nav-link p-0" href="#">Tất cả sản phẩm</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Hạt tươi</a>
                    </div>
                </div>
                <div class="col-6">
                    <div>
                        <p class="text-muted fw-bold">About Us</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">Our story</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Blog</a>
                    </div>
                    <div class="mt-4">
                        <a class="fw-bold text-success nav-link p-0" href="#">Shipping & Returns</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Terms & Conditions</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Privacy Policy</a>
                    </div>
                </div>
                <div class="col-3">
                    <div>
                        <p class="text-muted fw-bold">Liên hệ chúng tôi</p>
                        <p class="text-muted fw-bold m-0">Số điện thoại:</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">+123456789</a>
                    </div>
                    <div class="mt-4">
                        <p class="text-muted fw-bold m-0">Liên hệ chung</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">ecomoreishere@gmail.com</a>
                    </div>
                    <div class="mt-4">
                        <p class="text-muted fw-bold m-0">Khác</p>
                        <div class="d-flex justify-content-evenly">
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-facebook fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-square-instagram fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-pinterest fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-twitter fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-regular fa-paper-plane fa-xl"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/shopping_cart.js" asp-append-version="true"></script>
    <script src="~/js/edit_product_quantity_input.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>