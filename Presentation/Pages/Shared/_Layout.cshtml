@using Helpers.Commons.Constants
@using Presentation.Pages.Shared.Components.ShoppingCart
@{
    bool isLogin = !Equals(User.Identity, null)
        && User.Identity.IsAuthenticated
        && !Equals(User.FindFirst(CustomClaimTypes.UserId), null);

    string userName = string.Empty;

    if (isLogin)
    {
        userName = User.FindFirst(CustomClaimTypes.Username)!.Value;
    }

    bool displayFooter = true;
    bool displayShoppingCart = true;

    bool isBlogPage = false;

    if (ViewData["Blogs"] != null)
    {
        bool.TryParse(ViewData["Blogs"]!.ToString(), out isBlogPage);
    }

    if (!Equals(ViewData["DisplayFooter"], null))
    {
        bool.TryParse(ViewData["DisplayFooter"]!.ToString(), out displayFooter);
    }

    if (!Equals(ViewData["DisplayShoppingCart"], null))
    {
        bool.TryParse(ViewData["DisplayShoppingCart"]!.ToString(), out displayShoppingCart);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    @if (isBlogPage)
    {
        <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    }
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body id="body" class="m-0 d-flex flex-column" style="height: 100vh">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand d-flex fw-bold" asp-area="" asp-page="/Index">
                    <span class="text-light">Eco</span>
                    <span class="text-success">Morǝ</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold btn btn-success rounded-pill" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" href="/Product">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" href="#">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" href="/Blogs">Blog</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav justify-content-center">
                        @if (displayShoppingCart)
                        {
                            <li class="nav-item me-md-3">
                                <a class="nav-link text-light position-relative" href="#"
                                    onclick="ShowShoppingCart();">
                                    <i class="fa-solid fa-xl fa-cart-shopping"></i>
                                    <span id="cart-items-count" class="position-absolute translate-middle badge rounded-pill bg-danger">
                                        0
                                    </span>
                                </a>
                            </li>
                        }
                        <li class="nav-item ms-md-3">
                            @if (isLogin)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa-solid fa-xl fa-circle-user"></i> @userName
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item fw-bold text-dark" href="#">Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item fw-bold text-dark" href="/Auth/Logout">Logout</a></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="dropdown">
                                    <a class="nav-link text-light dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                        <i class="fa-solid fa-xl fa-circle-user"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item fw-bold text-dark" href="/Order">View Orders</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item fw-bold text-dark" href="/Auth/Login">Login</a></li>
                                    </ul>
                                </div>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if (displayShoppingCart)
    {
        @await Component.InvokeAsync(nameof(ShoppingCart))
    }

    <main role="main" class="container-fluid p-0 position-relative flex-grow-1">
        @RenderBody()
    </main>

    @if(displayFooter)
    {
        <footer class="container-fluid bg-light mt-auto">
            <section class="row py-4 px-5">
                <div class="col-12 col-md-3">
                    <div>
                        <p class="text-muted fw-bold">Shop</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">All Products</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Fresh Nuts</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Dry Nuts</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Mix Nuts</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Sản phẩm khác</a>
                    </div>
                    <div class="mt-4">
                        <a class="fw-bold text-success nav-link p-0" href="#">Nuts Subscription</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Set Nuts Decor</a>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div>
                        <p class="text-muted fw-bold">About Us</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">Our story</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Blog</a>
                    </div>
                    <div class="mt-4">
                        <a class="fw-bold text-success nav-link p-0" href="#">Shipping & Returns</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Terms & Conditions</a>
                        <a class="fw-bold text-success nav-link p-0" href="#">Privacy Policy</a>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div>
                        <p class="text-muted fw-bold">Contact Us</p>
                        <p class="text-muted fw-bold m-0">Phone:</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">+123456789</a>
                    </div>
                    <div class="mt-4">
                        <p class="text-muted fw-bold m-0">General Enquiry</p>
                        <a class="fw-bold text-success nav-link p-0" href="#">ecomoreishere@gmail.com</a>
                    </div>
                    <div class="mt-4">
                        <p class="text-muted fw-bold m-0">Contact Us</p>
                        <div class="d-flex justify-content-between mt-2">
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-facebook fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-square-instagram fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-pinterest fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-brands fa-twitter fa-xl"></i>
                            </a>
                            <a class="fw-bold text-success nav-link p-0" href="#">
                                <i class="fa-regular fa-paper-plane fa-xl"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/shopping_cart.js" asp-append-version="true"></script>
    <script src="~/js/edit_product_quantity_input.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>